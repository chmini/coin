extends layouts/moneybook

block content
    .add__container#AddContainer
        .add__content
            form(action=moneybook+routes.add, method="post")
                .add__column
                    span 날짜
                    span=strDate
                    input(type="hidden", name="date", value=date)
                .add__column
                    span 입출
                    .radio__container#IncomeExpend
                        .radio__column
                            input.radio#Income(type="radio", name="incExp", value="income")
                            label(for="Income") 수입
                        .radio__column
                            input.radio#Expend(type="radio", name="incExp", value="expend")
                            label(for="Expend") 지출
                .add__column
                    span 유형
                    .radio__container
                        .radio__column
                            input.radio#Cash(type="radio", name="property", value="현금", checked)
                            label(for="Cash") 현금
                        .radio__column
                            input.radio#Bank(type="radio", name="property", value="은행")
                            label(for="Bank") 은행
                        .radio__column
                            input.radio#Card(type="radio", name="property", value="카드")
                            label(for="Card") 카드
                .add__column#GroupButton
                    span 분류
                    span#StrGroup
                    input#SelectedGroup(type="hidden", name="group")
                .add__column
                    span 금액
                    input(type="text", name="amount", placeholder="금액", autocomplete="off")
                .add__column
                    input(type="submit", name="action", value="save")
                    input(type="submit", name="action", value="cancel") 

    .group__container#GroupContainer
        .group__content
            .group__column#GroupIncome
                button(type="button", value="월급") 월급
                button(type="button", value="부수입") 부수입
                button(type="button", value="용돈") 용돈
                button(type="button", value="상여") 상여
                button(type="button", value="금융소득") 금융소득
                button(type="button", value="기타") 기타
            .group__column#GroupExpend
                button(type="button", value="식비") 식비
                button(type="button", value="교통/차량") 교통/차량
                button(type="button", value="문화생활") 문화생활
                button(type="button", value="마트") 마트
                button(type="button", value="편의점") 편의점
                button(type="button", value="패션") 패션
                button(type="button", value="미용") 미용
                button(type="button", value="생활용품") 생활용품
                button(type="button", value="주거/통신") 주거/통신
                button(type="button", value="건강") 건강
                button(type="button", value="교육") 교육
                button(type="button", value="경조사/회비") 경조사/회비
                button(type="button", value="부모님") 부모님
                button(type="button", value="기타") 기타