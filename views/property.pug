extends layouts/moneybook

block content
    if property.length < 1
        form(action=moneybook+routes.property, method="post")
        
            span 현금
            input(type="hidden", name="property", value="현금")
            input(type="text", name="amount")

            span 은행
            input(type="hidden", name="property", value="은행")
            input(type="text", name="amount")

            input(type="hidden", name="property", value="카드")
            input(type="hidden", name="amount", value=0)

            input(type="submit", value="submit")
    else
        ul
            each prop in property
                li=prop.property
                li=prop.amount