extends layouts/moneybook

block content
    if props.length < 1
        form(action=moneybook+routes.property, method="post")

            span 현금
            input(type="hidden", name="property", value="현금")
            input(type="text", name="amount")

            span 은행
            input(type="hidden", name="property", value="은행")
            input(type="text", name="amount")

            input(type="hidden", name="property", value="카드")
            input(type="hidden", name="amount", value=0)

            input(type="submit", value="submit")
    else
        .prop__container
            .prop__content
                each prop in props
                    .prop__column
                        .column__property=prop.property
                        if prop.property === "카드"
                            .column__amount.expend #{prop.amount} 원
                        else
                            .column__amount.income #{prop.amount} 원
                hr
                .prop__column
                    .column__title 총
                    .column__sum #{sum} 원
